<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fjh.libraryfinal">

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.HomeActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.SearchActivity" android:launchMode="singleTask"></activity>
        <activity android:name=".UI.AddActivity" android:launchMode="singleTask"></activity>
        <activity android:name=".UI.detailsActivity" android:launchMode="singleTask"></activity>

        <activity android:name=".UI.MusicActivity" android:launchMode="singleTask"></activity>
        <activity android:name=".UI.VIdeoActivity" android:launchMode="singleTask"></activity>
    </application>

</manifest>