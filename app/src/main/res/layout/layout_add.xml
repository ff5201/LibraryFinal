<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/hideID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/add_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="图书编号:"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txt_add_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_id"/>
        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_id"
            android:text="图书名:"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/txt_add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_name"
            android:layout_below="@id/txt_add_id"/>
        <TextView
            android:id="@+id/add_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图书作者:"
            android:layout_below="@id/add_name"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/txt_add_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_add_name"
            android:layout_toRightOf="@id/add_author"/>
        <TextView
            android:id="@+id/add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="藏书地点:"
            android:layout_below="@id/add_author"
            android:layout_marginTop="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/txt_add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_add_author"
            android:layout_toRightOf="@id/add_address"/>


        <Button
            android:id="@+id/btn_add_clearTxt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_add_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="清空"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/btn_add_insert"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/btn_add_clearTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="存数据库"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/btn_add_goback"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_add_address"
            android:layout_toLeftOf="@id/btn_add_clearTxt"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:text="跳转"/>
        <Button
            android:id="@+id/btn_add_ROMSave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_add_clearTxt"
            android:layout_below="@id/txt_add_address"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="存内存"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/btn_add_SDSava"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_add_goback"
            android:layout_toLeftOf="@id/btn_add_insert"
            android:layout_alignLeft="@+id/btn_add_goback"
            android:layout_marginTop="15dp"
            android:text="存外存"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/btn_add_modify"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add_ROMSave"
            android:layout_toRightOf= "@+id/btn_add_insert"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="修改"
            android:textColor="#000000"/>
    </RelativeLayout>

</LinearLayout>